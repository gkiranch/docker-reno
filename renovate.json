{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "autoApprove": true,
  "customManagers": [
      {
        "customType": "regex",
        "fileMatch": [
          "(^|/)Makefile\\$" ],
        "matchStrings": [
            "#\\s*renovate: image=(?<depName>.*?)\\s+PYTHON_BASE_IMAGE:\\s*[\"']?(?<currentValue>[\\w+\\.\\-]*)"
          ],
          "datasourceTemplate": "docker"
        
      }
    ]
  }
