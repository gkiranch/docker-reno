
  {
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["helm-values", "dockerfile", "gradle"],
    "autoApprove": true,
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^Makefile$"],
        "matchStringsStrategy": "any",
        "matchStrings": [
          "PYTHON_BASE_IMAGE\\s:=\\s(?<currentValue>.*?)"
        ],
        "depNameTemplate": "kiranrenovate.jfrog.io/docker-remote/python38",
        "datasourceTemplate": "docker"
  }
]
}

