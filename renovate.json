
  {
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["helm-values", "dockerfile", "gradle"],
    "customManagers": [
      {
        "customType": "regex",
        "fileMatch": ["^Makefile$"],
        "matchStrings": [
          "GOTESTSUM_VERSION\\s:=\\s(?<currentValue>.*?)"
        ],
    "autoApprove": true
  }
]
}

