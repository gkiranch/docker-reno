
  {
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": ["helm-values", "dockerfile", "gradle"],
    "autoApprove": true,
    "customManagers": [
      {
        "fileMatch": ["^Makefile$"],
        "matchStringsStrategy": "any",
        "matchStrings": [
          "PYTHON_BASE_IMAGE\\s*=\\s*([^\\s]*)"
        ],
        "versioning": {
          "python": "auto"
  }
}
]
}

